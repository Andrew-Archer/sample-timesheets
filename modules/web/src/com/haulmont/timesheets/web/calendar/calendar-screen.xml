<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://caption"
        class="com.haulmont.timesheets.web.calendar.CalendarScreen"
        messagesPack="com.haulmont.timesheets.web.calendar">
    <layout expand="calendarHbox" spacing="true">
        <iframe id="commandLine" screen="command-line-frame" height="0px"/>
        <hbox width="100%">
            <hbox align="MIDDLE_LEFT" spacing="true">
            </hbox>
            <label id="monthLabel"
                   align="MIDDLE_CENTER"
                   stylename="h1"/>
            <hbox align="MIDDLE_RIGHT"
                  spacing="true">
                <button id="addTimeEntry" visible="false"
                        caption="msg://addTimeEntry"
                        invoke="addTimeEntry"/>
                <linkButton id="showCommandLine" icon="icons/gear.png" caption="" action="showCommandLine"/>
                <linkButton align="MIDDLE_LEFT"
                            icon="font-icon:CHEVRON_LEFT"
                            invoke="showPreviousMonth"/>
                <linkButton caption="msg://today"
                            invoke="setToday"/>
                <linkButton align="MIDDLE_RIGHT"
                            icon="font-icon:CHEVRON_RIGHT"
                            invoke="showNextMonth"/>
                <dateField id="monthSelector" align="MIDDLE_LEFT" resolution="DAY" stylename="simple"/>
            </hbox>
        </hbox>
        <hbox id="calendarHbox" expand="calBox" width="100%">
            <vbox id="calBox" height="100%"/>
            <vbox id="summaryBox" height="100%" width="150px"/>
        </hbox>
        <hbox width="100%" margin="true, true, false, true">
            <label id="monthSummary" align="MIDDLE_RIGHT"/>
        </hbox>
    </layout>
</window>
