<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.ts.gui.entities.tag.TagEdit"
        datasource="tagDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.ts.gui.entities.tag">
    <dsContext>
        <datasource id="tagDs"
                    class="com.haulmont.ts.entity.Tag"
                    view="tag-with-type"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="tagDs">
            <column width="250px">
                <field id="name"/>
                <field id="code"/>
                <field id="description"/>
                <field id="tagType"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
