<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.ts.gui.entities.task.TaskEdit"
        datasource="taskDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.ts.gui.entities.task">
    <dsContext>
        <datasource id="taskDs"
                    class="com.haulmont.ts.entity.Task"
                    view="fullTaskView">
            <collectionDatasource id="requaredTagTypesDs"
                                  property="requaredTagTypes"/>
            <collectionDatasource id="defaultTagsDs"
                                  property="defaultTags"/>
            <collectionDatasource id="participantsDs"
                                  property="participants"/>
        </datasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="taskDs">
            <column width="250px">
                <field id="name"/>
                <field id="code"/>
                <field id="description"/>
                <field id="project"/>
                <field id="type"/>
                <field id="status"/>
            </column>
        </fieldGroup>
        <groupBox id="requaredTagTypesBox"
                  caption="msg://com.haulmont.ts.entity/Task.requaredTagTypes"
                  visible="false">
            <table id="requaredTagTypesTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="requaredTagTypesDs"/>
                <buttonsPanel>
                    <button action="requaredTagTypesTable.add"/>
                    <button action="requaredTagTypesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="defaultTagsBox"
                  caption="msg://com.haulmont.ts.entity/Task.defaultTags"
                  visible="false">
            <table id="defaultTagsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="tagType"/>
                </columns>
                <rows datasource="defaultTagsDs"/>
                <buttonsPanel>
                    <button action="defaultTagsTable.add"/>
                    <button action="defaultTagsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="participantsBox"
                  caption="msg://com.haulmont.ts.entity/Task.participants">
            <table id="participantsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="user"/>
                    <column id="role"/>
                </columns>
                <rows datasource="participantsDs"/>
                <buttonsPanel>
                    <button action="participantsTable.add"/>
                    <button action="participantsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
