<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.ts.gui.entities.task.TaskEdit"
        datasource="taskDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.ts.gui.entities.task">
    <dsContext>
        <datasource id="taskDs"
                    class="com.haulmont.ts.entity.Task"
                    view="fullTaskView">
            <collectionDatasource id="requiredTagTypesDs"
                                  property="requiredTagTypes"/>
            <collectionDatasource id="defaultTagsDs"
                                  property="defaultTags"/>
            <collectionDatasource id="participantsDs"
                                  property="participants"/>
        </datasource>
        <collectionDatasource id="taskTypesDs"
                              class="com.haulmont.ts.entity.TaskType">
            <query>
                <![CDATA[select e from ts$TaskType e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="taskDs">
            <column width="250px">
                <field id="name"/>
                <field id="code"/>
                <field id="description"/>
                <field id="project"/>
                <field id="type"
                       optionsDatasource="taskTypesDs"/>
                <field id="status"/>
            </column>
        </fieldGroup>
        <groupBox id="requiredTagTypesBox"
                  caption="msg://com.haulmont.ts.entity/Task.requiredTagTypes"
                  visible="false">
