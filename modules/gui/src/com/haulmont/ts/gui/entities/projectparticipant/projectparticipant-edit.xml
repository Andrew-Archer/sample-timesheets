<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.ts.gui.entities.projectparticipant.ProjectParticipantEdit"
        datasource="projectParticipantDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.ts.gui.entities.projectparticipant">
    <dsContext>
        <datasource id="projectParticipantDs"
                    class="com.haulmont.ts.entity.ProjectParticipant"
                    view="fullProjectParticipantView"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="projectParticipantDs">
            <column width="250px">
                <field id="user"/>
                <field id="project"/>
                <field id="code"/>
                <field id="role"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
