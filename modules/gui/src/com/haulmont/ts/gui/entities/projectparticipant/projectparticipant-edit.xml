<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.ts.gui.entities.projectparticipant.ProjectParticipantEdit"
        datasource="projectParticipantDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.ts.gui.entities.projectparticipant">
    <dsContext>
        <datasource id="projectParticipantDs"
                    class="com.haulmont.ts.entity.ProjectParticipant"
                    view="fullProjectParticipantView"/>
        <collectionDatasource id="rolesDs"
                              class="com.haulmont.ts.entity.ProjectRole">
            <query>
                <![CDATA[select e from ts$ProjectRole e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="usersDs"
                              class="com.haulmont.cuba.security.entity.User">
            <query>
                <![CDATA[select e from sec$User e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="projectParticipantDs">
            <column width="250px">
                <field id="user"
                       optionsDatasource="usersDs"/>
                <field id="project"/>
                <field id="code"/>
                <field id="role"
                       optionsDatasource="rolesDs"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
