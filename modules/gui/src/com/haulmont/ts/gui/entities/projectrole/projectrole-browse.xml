<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.ts.gui.entities.projectrole.ProjectRoleBrowse"
        focusComponent="projectRolesTable"
        lookupComponent="projectRolesTable"
        messagesPack="com.haulmont.ts.gui.entities.projectrole">
    <dsContext>
        <collectionDatasource id="projectRolesDs"
                              class="com.haulmont.ts.entity.ProjectRole"
                              view="_local">
            <query>
                <![CDATA[select e from ts$ProjectRole e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="projectRolesTable"
            spacing="true">
        <filter id="filter"
                datasource="projectRolesDs">
            <properties include=".*"/>
        </filter>
        <table id="projectRolesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
                <column id="description"/>
            </columns>
            <rows datasource="projectRolesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="projectRolesTable.create"/>
                <button id="editBtn"
                        action="projectRolesTable.edit"/>
                <button id="removeBtn"
                        action="projectRolesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
