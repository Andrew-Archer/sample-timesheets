<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.ts.gui.entities.client.ClientBrowse"
        focusComponent="clientsTable"
        lookupComponent="clientsTable"
        messagesPack="com.haulmont.ts.gui.entities.client">
    <dsContext>
        <collectionDatasource id="clientsDs"
                              class="com.haulmont.ts.entity.Client"
                              view="_local">
            <query>
                <![CDATA[select e from ts$Client e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="clientsTable"
            spacing="true">
        <filter id="filter"
                datasource="clientsDs">
            <properties include=".*"/>
        </filter>
        <table id="clientsTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
            </columns>
            <rows datasource="clientsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="clientsTable.create"/>
                <button id="editBtn"
                        action="clientsTable.edit"/>
                <button id="removeBtn"
                        action="clientsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
