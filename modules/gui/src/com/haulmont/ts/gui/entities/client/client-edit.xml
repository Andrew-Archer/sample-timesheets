<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.ts.gui.entities.client.ClientEdit"
        datasource="clientDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.ts.gui.entities.client">
    <dsContext>
        <datasource id="clientDs"
                    class="com.haulmont.ts.entity.Client"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="clientDs">
            <column width="250px">
                <field id="name"/>
                <field id="code"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
