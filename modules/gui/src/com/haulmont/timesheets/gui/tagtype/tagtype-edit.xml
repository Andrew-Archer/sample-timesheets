<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.timesheets.gui.tagtype.TagTypeEdit"
        datasource="tagTypeDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.timesheets.gui.tagtype">
    <dsContext>
        <datasource id="tagTypeDs"
                    class="com.haulmont.timesheets.entity.TagType"
                    view="tagType-with-project">
            <collectionDatasource id="projectDs" property="projects"/>
        </datasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="tagTypeDs">
            <column width="250px">
                <field id="name"/>
                <field id="code"/>
                <field id="description"
                       custom="true"/>
            </column>
        </fieldGroup>
        <groupBox width="100%" height="AUTO" caption="msg://com.haulmont.timesheets.entity/TagType.projects">
            <table id="projectsTable" width="100%" height="AUTO">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <buttonsPanel>
                    <button id="add" action="projectsTable.add"/>
                    <button id="remove" action="projectsTable.remove"/>
                </buttonsPanel>
                <columns>
                    <column id="name"/>
                    <column id="code"/>
                </columns>
                <rows datasource="projectDs"/>
            </table>
        </groupBox>

        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
