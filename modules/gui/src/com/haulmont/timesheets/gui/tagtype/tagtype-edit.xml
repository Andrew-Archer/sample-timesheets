<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.timesheets.gui.tagtype.TagTypeEdit"
        datasource="tagTypeDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.timesheets.gui.tagtype">
    <dsContext>
        <datasource id="tagTypeDs"
                    class="com.haulmont.timesheets.entity.TagType"
                    view="tagType-with-project">
            <collectionDatasource id="projectDs" property="projects"/>
            <collectionDatasource id="tagsDs" property="tags"/>
        </datasource>
    </dsContext>
    <layout expand="windowActions" spacing="true">
        <tabSheet>
            <tab id="main" caption="msg://caption.main" spacing="true" margin="true">
                <fieldGroup id="fieldGroup"
                            datasource="tagTypeDs">
                    <column width="250px">
                        <field id="name"/>
                        <field id="code"/>
                        <field id="description"
                               custom="true"/>
                    </column>
                </fieldGroup>
                <groupBox width="100%" height="AUTO" caption="msg://com.haulmont.timesheets.entity/TagType.projects">
                    <table id="projectsTable" width="100%" height="200px">
                        <actions>
                            <action id="add"/>
                            <action id="remove"/>
                        </actions>
                        <buttonsPanel>
                            <button id="add" action="projectsTable.add"/>
                            <button id="remove" action="projectsTable.remove"/>
                        </buttonsPanel>
                        <columns>
                            <column id="name"/>
                            <column id="code"/>
                        </columns>
                        <rows datasource="projectDs"/>
                    </table>
                </groupBox>
            </tab>
            <tab id="tags" caption="msg://caption.tags" spacing="true" margin="true">
                <groupBox width="100%" height="AUTO" caption="msg://com.haulmont.timesheets.entity/TagType.tags">
                    <table id="tagsTable" width="100%" height="AUTO">
                        <actions>
                            <action id="create"/>
                            <action id="remove"/>
                        </actions>
                        <buttonsPanel>
                            <button id="createTag" action="tagsTable.create"/>
                            <button id="removeTag" action="tagsTable.remove"/>
                        </buttonsPanel>
                        <columns>
                            <column id="name"/>
                            <column id="code"/>
                        </columns>
                        <rows datasource="tagsDs"/>
                    </table>
                </groupBox>
            </tab>
        </tabSheet>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
