<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.timesheets.gui.tagtype.TagtypeLookup"
        focusComponent="tagTypesTable"
        lookupComponent="tagTypesTable"
        messagesPack="com.haulmont.timesheets.gui.tagtype">
    <dsContext>
        <collectionDatasource id="tagTypesDs"
                              class="com.haulmont.timesheets.entity.TagType"
                              view="tagType-with-project">
            <query>
                <![CDATA[select e from ts$TagType e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="tagTypesTable"
            spacing="true">
        <filter id="filter"
                datasource="tagTypesDs">
            <properties include=".*"/>
        </filter>
        <table id="tagTypesTable"
               editable="false"
               width="100%">
            <columns>
                <column id="name"/>
                <column id="code"/>
                <column id="project"/>
                <column id="description"
                        maxTextLength="20"/>
            </columns>
            <rows datasource="tagTypesDs"/>
            <rowsCount/>
        </table>
    </layout>
</window>
