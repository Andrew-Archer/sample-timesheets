<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://com.haulmont.timesheets.entity/TimeEntry.rejectionReason"
        class="com.haulmont.timesheets.gui.rejection.RejectionReason"
        messagesPack="com.haulmont.timesheets.gui.rejection">
    <actions>
        <action id="confirm" invoke="confirm" shortcut="CTRL-ENTER"/>
        <action id="cancel" caption="msg://cancel" invoke="cancel"/>
    </actions>
    <layout expand="rejectionReasonText" spacing="true">
        <textArea id="rejectionReasonText" width="100%"/>
        <buttonsPanel id="buttonsPanel">
            <button id="okButton" action="confirm" caption="OK" icon="icons/ok.png"/>
            <button id="cancelButton" action="cancel" caption="msg://cancel" icon="icons/cancel.png"/>
        </buttonsPanel>
    </layout>
</window>
