<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.timesheets.gui.tag.TagLookup"
        focusComponent="tagsTable"
        lookupComponent="tagsTable"
        messagesPack="com.haulmont.timesheets.gui.tag">
    <dsContext>
        <collectionDatasource id="tagsDs"
                              class="com.haulmont.timesheets.entity.Tag"
                              view="tag-with-type">
            <query>
                <![CDATA[select e from ts$Tag e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="tagsTable"
            spacing="true">
        <filter id="filter"
                datasource="tagsDs">
            <properties include=".*"/>
        </filter>
        <table id="tagsTable"
               editable="false"
               width="100%">
            <columns>
                <column id="name"/>
                <column id="code"/>
                <column id="tagType"/>
                <column id="description"
                        maxTextLength="20"/>
            </columns>
            <rows datasource="tagsDs"/>
            <rowsCount/>
        </table>
    </layout>
</window>
