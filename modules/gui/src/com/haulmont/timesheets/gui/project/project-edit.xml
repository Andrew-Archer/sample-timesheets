<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.timesheets.gui.project.ProjectEdit"
        datasource="projectDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.timesheets.gui.project">
    <dsContext>
        <datasource id="projectDs"
                    class="com.haulmont.timesheets.entity.Project"
                    view="project-full">
            <collectionDatasource id="participantsDs"
                                  property="participants"/>
        </datasource>
        <collectionDatasource id="participantsRolesDs"
                              class="com.haulmont.timesheets.entity.ProjectRole">
            <query>
                <![CDATA[select e from ts$ProjectRole e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="projectsDs"
                              class="com.haulmont.timesheets.entity.Project"
                              view="project-full">
            <query>
                <![CDATA[select e from ts$Project e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="clientsDs"
                              class="com.haulmont.timesheets.entity.Client">
            <query>
                <![CDATA[select e from ts$Client e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <grid spacing="true"
              width="100%">
            <columns>
                <column/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <fieldGroup id="fieldGroup"
                                datasource="projectDs">
                        <column width="250px">
                            <field id="name"/>
                            <field id="code"/>
                            <field id="parent"
                                   optionsDatasource="projectsDs"/>
                            <field id="client"
                                   optionsDatasource="clientsDs"/>
                            <field id="description"
                                   custom="true"/>
                            <field id="status"/>
                        </column>
                    </fieldGroup>
                    <groupBox id="participantsBox"
                              width="100%"
                              height="100%"
                              caption="msg://com.haulmont.timesheets.entity/Project.participants">
                        <table id="participantsTable"
                               columnControlVisible="false"
                               editable="true"
                               height="100%"
                               width="100%">
                            <actions>
                                <action id="create"/>
                                <action id="remove"/>
                            </actions>
                            <columns>
                                <column id="user"
                                        link="true"/>
                                <column id="role"
                                        editable="true"
                                        optionsDatasource="participantsRolesDs"/>
                                <column id="user.position"/>
                            </columns>
                            <rows datasource="participantsDs"/>
                            <buttonsPanel>
                                <button action="participantsTable.create"/>
                                <button action="participantsTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </row>
            </rows>
        </grid>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
