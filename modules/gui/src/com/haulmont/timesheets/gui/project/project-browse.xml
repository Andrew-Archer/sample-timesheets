<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.timesheets.gui.project.ProjectBrowse"
        focusComponent="projectsTable"
        lookupComponent="projectsTable"
        messagesPack="com.haulmont.timesheets.gui.project">
    <dsContext>
        <hierarchicalDatasource id="projectsDs"
                                class="com.haulmont.timesheets.entity.Project"
                                hierarchyProperty="parent"
                                view="project-full">
            <query>
                <![CDATA[select e from ts$Project e left join e.participants p where p.user.id = :session$userId or :param$superuser = true]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="tasksDs"
                              class="com.haulmont.timesheets.entity.Task"
                              view="task-full">
            <query>
                <![CDATA[select t from ts$Task t where t.project.id = :ds$projectsDs]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="participantsDs"
                              class="com.haulmont.timesheets.entity.ProjectParticipant"
                              view="projectParticipant-full">
            <query>
                <![CDATA[select p from ts$ProjectParticipant p where p.project.id = :ds$projectsDs]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="participantsRolesDs"
                              class="com.haulmont.timesheets.entity.ProjectRole">
            <query>
                <![CDATA[select e from ts$ProjectRole e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="split"
            spacing="true">
        <filter id="filter"
                datasource="projectsDs">
            <properties include=".*"/>
        </filter>
        <split id="split"
               orientation="horizontal"
               pos="21"
               width="100%">
            <vbox height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <treeTable id="projectsTable"
                           height="100%"
                           width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="code"/>
                        <column id="client"/>
                        <column id="status"/>
                    </columns>
                    <rows datasource="projectsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="projectsTable.create"/>
                        <button id="editBtn"
                                action="projectsTable.edit"/>
                        <button id="removeBtn"
                                action="projectsTable.remove"/>
                    </buttonsPanel>
                </treeTable>
            </vbox>
            <tabSheet>
                <tab id="tasks" caption="msg://caption.tasks" margin="true;false;false;false">
                    <vbox height="100%"
                          margin="false,false,false,true">
                        <table id="tasksTable"
                               height="100%"
                               width="100%">
                            <actions>
                                <action id="create"/>
                                <action id="edit"/>
                                <action id="remove"/>
                                <action id="switchStatus"/>
                            </actions>
                            <columns>
                                <column id="name"/>
                                <column id="description"
                                        maxTextLength="20"/>
                                <column id="type"/>
                                <column id="status"/>
                            </columns>
                            <rows datasource="tasksDs"/>
                            <buttonsPanel id="taskButtonsPanel"
                                          alwaysVisible="true">
                                <button id="taskCreateBtn"
                                        action="tasksTable.create"/>
                                <button id="taskEditBtn"
                                        action="tasksTable.edit"/>
                                <button id="tasRemoveBtn"
                                        action="tasksTable.remove"/>
                                <button id="switchStatusBtn"
                                        action="tasksTable.switchStatus"/>
                            </buttonsPanel>
                        </table>
                    </vbox>
                </tab>

                <tab id="participants" caption="msg://caption.participants" margin="true;false;false;false">
                    <vbox height="100%"
                          margin="false,false,false,true">
                        <table id="participantsTable"
                               columnControlVisible="false"
                               editable="true"
                               height="100%"
                               width="100%">
                            <actions>
                                <action id="create"/>
                                <action id="remove"/>
                            </actions>
                            <columns>
                                <column id="user"
                                        link="true"/>
                                <column id="role"
                                        editable="true"
                                        optionsDatasource="participantsRolesDs"/>
                                <column id="user.position"/>
                            </columns>
                            <rows datasource="participantsDs"/>
                            <buttonsPanel>
                                <button action="participantsTable.create"/>
                                <button action="participantsTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </vbox>
                </tab>
            </tabSheet>
        </split>
    </layout>
</window>
