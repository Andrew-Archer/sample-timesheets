<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.timesheets.gui.holiday.HolidayEdit"
        datasource="holidayDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.timesheets.gui.holiday">
    <dsContext>
        <datasource id="holidayDs"
                    class="com.haulmont.timesheets.entity.Holiday"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="holidayDs">
            <column width="250px">
                <field id="startDate"/>
                <field id="endDate"/>
                <field id="name"/>
                <field id="description"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
