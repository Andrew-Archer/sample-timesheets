<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.timesheets.gui.projectrole.ProjectRoleEdit"
        datasource="projectRoleDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.timesheets.gui.projectrole">
    <dsContext>
        <datasource id="projectRoleDs"
                    class="com.haulmont.timesheets.entity.ProjectRole"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="projectRoleDs">
            <column width="250px">
                <field id="name"/>
                <field id="code"/>
                <field id="description"
                       custom="true"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
