<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.timesheets.gui.timeentry.TimeEntryEdit"
        datasource="timeEntryDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.timesheets.gui.timeentry">
    <dsContext>
        <datasource id="timeEntryDs"
                    class="com.haulmont.timesheets.entity.TimeEntry"
                    view="timeEntry-full">
            <collectionDatasource id="tagsDs"
                                  property="tags"/>
        </datasource>
        <collectionDatasource id="allTagsDs"
                              class="com.haulmont.timesheets.entity.Tag"
                              view="tag-with-type">
            <query>
                <![CDATA[select e from ts$Tag e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="openedTasksDs"
                              class="com.haulmont.timesheets.entity.Task"
                              view="task-full">
            <query>
                <![CDATA[select e from ts$Task e where e.status = 10 order by e.project]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox">
            <fieldGroup id="fieldGroup"
                        datasource="timeEntryDs">
                <column width="250px">
                    <field id="task"
                           optionsDatasource="openedTasksDs"/>
                    <field id="taskName"/>
                    <field id="user"
                           enable="false"/>
                    <field id="date"/>
                    <field id="time"/>
                    <field id="status"/>
                    <field id="ticket"/>
                    <field id="description"
                           custom="true"/>
                </column>
            </fieldGroup>
            <tokenList id="tagsTokenList"
                       caption="msg://com.haulmont.timesheets.entity/TimeEntry.tags"
                       datasource="tagsDs"
                       inline="true"
                       width="480px">
                <button icon="icons/plus-btn.png"/>
                <lookup optionsDatasource="allTagsDs"/>
            </tokenList>
        </scrollBox>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
