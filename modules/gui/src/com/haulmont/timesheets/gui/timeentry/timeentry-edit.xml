<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.timesheets.gui.timeentry.TimeEntryEdit"
        datasource="timeEntryDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.timesheets.gui.timeentry">
    <dsContext>
        <datasource id="timeEntryDs"
                    class="com.haulmont.timesheets.entity.TimeEntry"
                    view="timeEntry-full">
            <collectionDatasource id="tagsDs"
                                  property="tags"/>
        </datasource>
        <collectionDatasource id="optionOtherTagsDs"
                              datasourceClass="com.haulmont.timesheets.gui.data.TagsCollectionDatasource"
                              class="com.haulmont.timesheets.entity.Tag"/>
        <collectionDatasource id="activeTasksDs"
                              class="com.haulmont.timesheets.entity.Task"
                              datasourceClass="com.haulmont.timesheets.gui.data.TasksCollectionDatasource"/>
        <collectionDatasource id="otherTagsDs"
                              refreshMode="NEVER"
                              allowCommit="false"
                              class="com.haulmont.timesheets.entity.Tag"/>
    </dsContext>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="timeEntryDs">
                <column width="300px">
                    <field id="task"
                           optionsDatasource="activeTasksDs"/>
                    <field id="user" enable="false"/>
                    <field id="date"/>
                    <field id="time"/>
                    <field id="status"/>
                    <field id="description"
                           custom="true"/>
                    <field id="rejectionReason"
                           custom="true"/>
                </column>
            </fieldGroup>
            <vbox id="tagsTokenListsBox" spacing="true">

            </vbox>
            <tokenList id="otherTagsTokenList"
                       caption="msg://com.haulmont.timesheets.entity/TimeEntry.tags"
                       datasource="otherTagsDs"
                       inline="true"
                       width="409px">
                <button icon="icons/plus-btn.png"/>
                <lookup optionsDatasource="optionOtherTagsDs"/>
            </tokenList>
        </scrollBox>
        <iframe id="windowActions"
                screen="editWindowActions"/>
    </layout>
</window>
