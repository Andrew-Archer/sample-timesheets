<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.timesheets.gui.timeentry.TimeEntryLookup"
        focusComponent="timeEntriesTable"
        lookupComponent="timeEntriesTable"
        messagesPack="com.haulmont.timesheets.gui.timeentry">
    <dsContext>
        <collectionDatasource id="timeEntriesDs"
                              class="com.haulmont.timesheets.entity.TimeEntry"
                              view="timeEntry-full">
            <query>
                <![CDATA[select e from ts$TimeEntry e where e.user.id = :param$user and e.date = :param$date and e.task.id = :param$task]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="timeEntriesTable"
            spacing="true">
        <filter id="filter"
                datasource="timeEntriesDs">
            <properties include=".*"/>
        </filter>
        <table id="timeEntriesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="task"/>
                <column id="timeInMinutes">
                    <formatter class="com.haulmont.timesheets.gui.HoursAndMinutesFormatter"/>
                </column>
                <column id="status"/>
                <column id="description"
                        maxTextLength="20"/>
                <column id="activityType"/>
            </columns>
            <rows datasource="timeEntriesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="timeEntriesTable.create"/>
                <button id="editBtn"
                        action="timeEntriesTable.edit"/>
                <button id="removeBtn"
                        action="timeEntriesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
