<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.timesheets.gui.task.TaskEdit"
        datasource="taskDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.timesheets.gui.task">
    <dsContext>
        <datasource id="taskDs"
                    class="com.haulmont.timesheets.entity.Task"
                    view="task-full">
            <collectionDatasource id="requiredTagTypesDs"
                                  property="requiredTagTypes"/>
            <collectionDatasource id="defaultTagsDs"
                                  property="defaultTags"/>
            <collectionDatasource id="participantsDs"
                                  property="exclusiveParticipants"/>
        </datasource>
        <collectionDatasource id="taskTypesDs"
                              class="com.haulmont.timesheets.entity.TaskType">
            <query>
                <![CDATA[select e from ts$TaskType e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="allTagsDs"
                              class="com.haulmont.timesheets.entity.Tag"
                              view="tag-with-type">
            <query>
                <![CDATA[select e from ts$Tag e]]>
                <filter>
                    <c>e.tagType.id in (:custom$requiredTagTypes)</c>
                </filter>
            </query>
        </collectionDatasource>
        <collectionDatasource id="allTagsTypesDs"
                              class="com.haulmont.timesheets.entity.TagType"
                              view="tagType-with-project">
            <query>
                <![CDATA[select e from ts$TagType e order by e.project]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="tabsheet"
            spacing="true">
        <tabSheet id="tabsheet">
            <tab id="main"
                 caption="msg://caption.main"
                 margin="true">
                <grid spacing="true"
                      width="100%">
                    <columns>
                        <column/>
                        <column flex="1.0"/>
                    </columns>
                    <rows>
                        <row>
                            <fieldGroup id="fieldGroup"
                                        datasource="taskDs">
                                <column width="250px">
                                    <field id="name"/>
                                    <field id="code"/>
                                    <field id="description"
                                           custom="true"/>
                                    <field id="project"/>
                                    <field id="type"
                                           optionsDatasource="taskTypesDs"/>
                                    <field id="status"/>
                                </column>
                            </fieldGroup>
                        </row>
                    </rows>
                </grid>
            </tab>
            <tab id="advanced"
                 caption="msg://caption.advanced"
                 expand="participantsBox"
                 margin="true">
                <tokenList id="tagsTypesTokenList"
                           caption="msg://com.haulmont.timesheets.entity/Task.requiredTagTypes"
                           datasource="requiredTagTypesDs"
                           inline="true"
                           width="480px">
                    <button icon="icons/plus-btn.png"/>
                    <lookup optionsDatasource="allTagsTypesDs"/>
                </tokenList>
                <tokenList id="tagsTokenList"
                           caption="msg://com.haulmont.timesheets.entity/Task.defaultTags"
                           datasource="defaultTagsDs"
                           inline="true"
                           width="480px">
                    <button icon="icons/plus-btn.png"/>
                    <lookup optionsDatasource="allTagsDs"/>
                </tokenList>
                <groupBox id="participantsBox"
                          caption="msg://com.haulmont.timesheets.entity/Task.exclusiveParticipants">
                    <table id="participantsTable"
                           columnControlVisible="false"
                           height="100%"
                           width="100%">
                        <actions>
                            <action id="add"/>
                            <action id="remove"/>
                        </actions>
                        <columns>
                            <column id="user"
                                    link="true"/>
                            <column id="role"/>
                            <column id="user.position"/>
                        </columns>
                        <rows datasource="participantsDs"/>
                        <buttonsPanel>
                            <button action="participantsTable.add"/>
                            <button action="participantsTable.remove"/>
                        </buttonsPanel>
                    </table>
                </groupBox>
            </tab>
        </tabSheet>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
