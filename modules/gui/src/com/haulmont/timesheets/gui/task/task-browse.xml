<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.timesheets.gui.task.TaskBrowse"
        focusComponent="tasksTable"
        lookupComponent="tasksTable"
        messagesPack="com.haulmont.timesheets.gui.task">
    <dsContext>
        <collectionDatasource id="tasksDs"
                              class="com.haulmont.timesheets.entity.Task"
                              datasourceClass="com.haulmont.timesheets.gui.data.TasksCollectionDatasource"
                              view="task-full">
        </collectionDatasource>
    </dsContext>
    <layout expand="tasksTable"
            spacing="true">
        <table id="tasksTable"
               width="100%">
            <actions>
                <action id="edit"/>
                <action id="createTimeEntry"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="project"/>
                <column id="code"/>
                <column id="description"
                        maxTextLength="20"/>
                <column id="type"/>
                <column id="status"/>
            </columns>
            <rows datasource="tasksDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="editBtn"
                        action="tasksTable.edit"/>
                <button id="createTimeEntry"
                        action="tasksTable.createTimeEntry"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
