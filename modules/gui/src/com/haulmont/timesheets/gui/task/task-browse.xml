<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.timesheets.gui.task.TaskBrowse"
        focusComponent="tasksTable"
        lookupComponent="tasksTable"
        messagesPack="com.haulmont.timesheets.gui.task">
    <dsContext>
        <collectionDatasource id="tasksDs"
                              class="com.haulmont.timesheets.entity.Task"
                              view="task-full">
            <query>
                <![CDATA[select e from ts$Task e join e.participants p where p.user.id = :session$userId]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="tasksTable"
            spacing="true">
        <filter id="filter"
                datasource="tasksDs">
            <properties include=".*"/>
        </filter>
        <table id="tasksTable"
               width="100%">
            <actions>
                <action id="edit"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
                <column id="description"
                        maxTextLength="20"/>
                <column id="project"/>
                <column id="type"/>
                <column id="status"/>
            </columns>
            <rows datasource="tasksDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="editBtn"
                        action="tasksTable.edit"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
